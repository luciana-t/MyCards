<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/caliseu"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp">
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo do Card"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/hashVolunt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#voluntariado"
                    android:textColor="@android:color/holo_purple"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"/>
                <TextView
                    android:id="@+id/hashDoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#doacao"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_toStartOf="@+id/hashVolunt"
                    android:layout_marginEnd="15dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginHorizontal="8dp"
                android:id="@+id/textDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:textColor="#292929"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/seguir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Seguir"
                    android:layout_toStartOf="@+id/visitar"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/visitar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Visitar"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp"/>
            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>